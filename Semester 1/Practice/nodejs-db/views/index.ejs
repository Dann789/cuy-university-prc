<!--Sama dengan HTML yang biasanya digunakan-->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tutorial Node JS With DB</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <h3><%= title %></h3>
      <!-- Title Property From server.js-->
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Nama</th>
            <th scope="col">Kelas</th>
          </tr>
        </thead>
        <tbody>
          <% for (let user of users) { %>
          <!-- Data users from server.js (before from database)-->
          <tr>
            <td scope="row"><%= user.id_user %></td>
            <td scope="row"><%= user.nama %></td>
            <td scope="row"><%= user.kelas %></td>
          </tr>
          <% } %>
        </tbody>
      </table>

      <form action="/tambah" method="post">
        <h3>Tambah Data Mahasiswa</h3>
        <div class="row mb-3">
          <label for="nama" class="col-sm-2 col-form-label">Nama</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="nama"/>
          </div>
        </div>
        <div class="row mb-3">
          <label for="kelas" class="col-sm-2 col-form-label"
            >Kelas</label
          >
          <div class="col-sm-10">
            <input type="text" class="form-control" name="kelas"/>
          </div>
        </div>
        <input type="submit" class="btn btn-primary" value="Tambahkan">
      </form>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
